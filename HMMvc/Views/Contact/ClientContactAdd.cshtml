@model MVC.Models.UserDetailsVM
@using Common

@{
    ViewBag.Title = "Add Contact";
     
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="SiteSideMenu">
        @{Html.RenderAction("UserSettingsMenu", "User");}

    </div>

    
    <div class="sitesubcontent">
   
            @Html.HiddenFor(model => model.UserID)

        <h2 class="floatfirst">@GlobalDM.GetTransStr("User_Users")</h2>
        <h1 class="float">@GlobalDM.GetTransStr("User_NewUser")</h1>
        <br />
        <div class="dataform floatfirst">
            <div class="datarow">
                <h2>@GlobalDM.GetTransStr("User_PersonalDetails")</h2>
            </div>
            <div class="datarow floatfirst">
                <div class="fieldlabel">
                    @GlobalDM.GetTransStr("User_FirstName")
                </div>
                <div class="fieldvalue">
                    @Html.EditorFor(model => model.FirstName)
                    @Html.ValidationMessageFor(model => model.FirstName)
                </div>
            </div>
            <div class="datarow floatlast">
                <div class="fieldlabel">
                    @GlobalDM.GetTransStr("User_LastName")
                </div>
                <div class="fieldvalue">
                    @Html.EditorFor(model => model.LastName)
                    @Html.ValidationMessageFor(model => model.LastName)
                </div>
